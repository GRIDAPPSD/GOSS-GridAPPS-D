#
#  OSGi TEST BUNDLE 
#

Bundle-Version: 1.0.0-SNAPSHOT
Bundle-Description: \
	This bundle is an OSGi test bundle that tests the GridAPPS-D platform implementation. \
	It provides comprehensive integration and unit tests for the GridAPPS-D services, \
	including application management, configuration management, data management, \
	simulation management, and test management components.


Private-Package:  \
	gov.pnnl.goss.gridappsd.test

# Test cases are automatically discovered by the test framework
# Test-Cases: ${classes;CONCRETE;ANNOTATED;org.junit.Test}

-includeresource: {readme.md}

-buildpath: \
	junit:junit;version=4.13.2,\
	org.mockito:mockito-core;version=5.14.2,\
	org.apache.felix:org.apache.felix.configadmin;version=1.9.26,\
	pnnl.goss.core.core-api;version='[13.0,14)',\
	pnnl.goss.core.goss-client;version='[13.0,14)',\
	gov.pnnl.goss.gridappsd.gridappsd;version=latest,\
	pnnl.goss.core.goss-core-server;version='[13.0,14)',\
	pnnl.goss.core.goss-core-server-api;version='[13.0,14)',\
	pnnl.goss.core.goss-core-security;version='[13.0,14)',\
	org.slf4j:slf4j-api;version=2.0.16,\
	org.apache.httpcomponents:httpclient;version=4.5.14,\
	org.apache.httpcomponents:httpcore;version=4.4.16,\
	jakarta.jms:jakarta.jms-api;version=3.1.0,\
	gov.pnnl.goss.gridappsd.gridappsd.api;version=latest,\
	com.google.code.gson:gson;version=2.11.0,\
	org.fusesource.stompjms:stompjms-client;version=1.19
	

-runrequires: \
	osgi.identity;filter:='(osgi.identity=gov.pnnl.goss.gridappsd.test)'

# Using Logback instead of Felix Log for Java 21 compatibility
-runbundles: \
	gov.pnnl.goss.gridappsd.test;version=snapshot,\
	ch.qos.logback:logback-classic;version='[1.5,2)',\
	ch.qos.logback:logback-core;version='[1.5,2)',\
	org.mockito:mockito-core;version='[5.14,6)',\
	org.objenesis:objenesis;version='[3.4,4)',\
	jakarta.jms:jakarta.jms-api;version='[3.1,4)',\
	org.apache.activemq:activemq-osgi;version='[6.2,7)',\
	commons-logging:commons-logging;version='[1.2,2)',\
	org.apache.felix:org.apache.felix.configadmin;version='[1.9,2)',\
	org.apache.httpcomponents:httpclient;version='[4.5,5)',\
	org.apache.httpcomponents:httpcore;version='[4.4,5)',\
	pnnl.goss.core.core-api;version='[13.0.0,13.0.1)',\
	pnnl.goss.core.goss-core-exceptions;version='[13.0.0,13.0.1)',\
	pnnl.goss.core.goss-core-security;version='[13.0.0,13.0.1)',\
	pnnl.goss.core.goss-core-server-api;version='[13.0.0,13.0.1)',\
	org.slf4j:slf4j-api;version='[2.0,3)',\
	junit:junit;version='[4.13,5)',\
	org.hamcrest:hamcrest;version='[2.2,3)',\
	com.google.code.gson:gson;version='[2.11,3)',\
	gov.pnnl.goss.gridappsd.gridappsd.api;version=latest,\
	org.fusesource.stompjms:stompjms-client;version='[1.19,2)'
-runfw: org.apache.felix.framework;version='[7.0.5,8)'
-runee: JavaSE-21